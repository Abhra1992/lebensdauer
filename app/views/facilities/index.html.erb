<h1>Listing facilities</h1>

<table>
  <tr>
    <th>Registration</th>
    <th>Ftype</th>
    <th>Name</th>
    <th>Location</th>
    <th>Open</th>
    <th>Close</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @facilities.each do |facility| %>
  <tr>
    <td><%= facility.registration %></td>
    <td><%= facility.ftype %></td>
    <td><%= facility.name %></td>
    <td><%= facility.location %></td>
    <td><%= facility.open %></td>
    <td><%= facility.close %></td>
    <td><%= link_to 'Show', facility %></td>
    <td><%= link_to 'Edit', edit_facility_path(facility) %></td>
    <td><%= link_to 'Destroy', facility, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

